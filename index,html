    <!-- Processing Overlay -->
    <div class="processing-overlay" id="processing-overlay">
        <img src="logo.png" alt="Processing" class="loading-logo">
        <p class="processing-text">Pumpifying your image...</p>
    </div>

    <script>
        // ==================== LOADING SCREEN ====================
        document.addEventListener('DOMContentLoaded', function() {
            const loadingScreen = document.getElementById('loading-screen');
            const mainContent = document.getElementById('main-content');
            const loadingBar = document.getElementById('loading-bar');
            const pillsContainer = document.getElementById('flying-pills-container');
            
            // Create flying pills
            for (let i = 0; i < 8; i++) {
                createFlyingPill(pillsContainer, i);
            }
            
            // Animate loading bar
            let progress = 0;
            const loadingInterval = setInterval(() => {
                progress += Math.random() * 15;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(loadingInterval);
                    
                    setTimeout(() => {
                        loadingScreen.classList.add('hidden');
                        mainContent.classList.add('visible');
                        createFloatingBackground();
                    }, 500);
                }
                loadingBar.style.width = progress + '%';
            }, 200);
        });

        function createFlyingPill(container, index) {
            const pill = document.createElement('img');
            pill.src = 'pill.png';
            pill.className = 'flying-pill';
            pill.style.top = (Math.random() * 80 + 10) + '%';
            pill.style.animationDelay = (index * 0.5) + 's';
            pill.style.animationDuration = (3 + Math.random() * 2) + 's';
            container.appendChild(pill);
        }

        function createFloatingBackground() {
            const container = document.getElementById('floating-bg');
            for (let i = 0; i < 10; i++) {
                const pill = document.createElement('img');
                pill.src = 'pill.png';
                pill.className = 'floating-pill';
                pill.style.width = (30 + Math.random() * 40) + 'px';
                pill.style.left = (Math.random() * 100) + '%';
                pill.style.top = (Math.random() * 100) + '%';
                pill.style.animationDelay = (Math.random() * 5) + 's';
                container.appendChild(pill);
            }
        }

        // ==================== FILE UPLOAD ====================
        const uploadStation = document.getElementById('upload-station');
        const fileInput = document.getElementById('file-input');
        const previewArea = document.getElementById('preview-area');
        const originalPreview = document.getElementById('original-preview');
        const resultPreview = document.getElementById('result-preview');
        const processingOverlay = document.getElementById('processing-overlay');

        uploadStation.addEventListener('click', () => fileInput.click());
        
        uploadStation.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadStation.classList.add('dragover');
        });
        
        uploadStation.addEventListener('dragleave', () => {
            uploadStation.classList.remove('dragover');
        });
        
        uploadStation.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadStation.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file && file.type.startsWith('image/')) {
                processImage(file);
            }
        });
        
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                processImage(file);
            }
        });

        async function processImage(file) {
            // Show original preview
            const reader = new FileReader();
            reader.onload = (e) => {
                originalPreview.src = e.target.result;
            };
            reader.readAsDataURL(file);
            
            // Show processing overlay
            processingOverlay.classList.add('visible');
            
            // Client-side image processing
            const img = new Image();
            img.onload = () => {
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                canvas.width = img.width;
                canvas.height = img.height;
                
                // Draw original image
                ctx.drawImage(img, 0, 0);
                
                // Get image data
                const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                const data = imageData.data;
                
                // Apply green/white tint effect
                for (let i = 0; i < data.length; i += 4) {
                    const r = data[i];
                    const g = data[i + 1];
                    const b = data[i + 2];
                    
                    // Calculate luminance
                    const lum = 0.299 * r + 0.587 * g + 0.114 * b;
                    
                    // Mix between white and green based on luminance
                    if (lum > 180) {
                        // Bright areas -> white with slight green tint
                        data[i] = Math.min(255, lum * 0.95);
                        data[i + 1] = Math.min(255, lum);
                        data[i + 2] = Math.min(255, lum * 0.95);
                    } else {
                        // Darker areas -> green tones
                        data[i] = Math.min(255, lum * 0.5);
                        data[i + 1] = Math.min(255, lum * 0.9 + 80);
                        data[i + 2] = Math.min(255, lum * 0.5);
                    }
                }
                
                ctx.putImageData(imageData, 0, 0);
                
                // Add pill overlay
                const pillImg = new Image();
                pillImg.onload = () => {
                    // Calculate pill size (proportional to image)
                    const pillSize = Math.min(canvas.width, canvas.height) * 0.25;
                    
                    // Position in bottom right corner
                    const pillX = canvas.width - pillSize - 20;
                    const pillY = canvas.height - pillSize - 20;
                    
                    // Add slight glow effect
                    ctx.shadowColor = '#4ade80';
                    ctx.shadowBlur = 20;
                    ctx.drawImage(pillImg, pillX, pillY, pillSize, pillSize);
                    ctx.shadowBlur = 0;
                    
                    // Show result
                    resultPreview.src = canvas.toDataURL('image/png');
                    processingOverlay.classList.remove('visible');
                    previewArea.classList.add('visible');
                    
                    // Scroll to preview
                    previewArea.scrollIntoView({ behavior: 'smooth', block: 'center' });
                };
                pillImg.src = 'pill.png';
            };
            
            img.src = URL.createObjectURL(file);
        }

        // Download button
        document.getElementById('download-btn').addEventListener('click', () => {
            const link = document.createElement('a');
            link.download = 'pumpified-' + Date.now() + '.png';
            link.href = resultPreview.src;
            link.click();
        });

        // New image button
        document.getElementById('new-btn').addEventListener('click', () => {
            previewArea.classList.remove('visible');
            fileInput.value = '';
            uploadStation.scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
    </script>
</body>
</html>
